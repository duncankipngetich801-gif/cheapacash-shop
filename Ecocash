<script>
function buy(item, price) {
  let method = prompt(
    "Buying: " + item + " ($" + price + ")\n\nChoose payment:\n1 - EcoCash\n2 - PayPal"
  );

  if (method == "1") {
    alert(
      "EcoCash Payment\n\nSend $" + price +
      " to:\nEcoCash Number: 07XXXXXXXX\nName: Cheapacash\n\nAfter payment contact us on WhatsApp."
    );
  }

  if (method == "2") {
    window.location.href =
      "https://www.paypal.com/paypalme/YOURUSERNAME/" + price;
  }
}
</script>

